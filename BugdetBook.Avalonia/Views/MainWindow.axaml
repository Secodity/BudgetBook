<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BugdetBook.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:BugdetBook.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BugdetBook.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
		 xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:vms="using:ViewModelsSamples.Bars.Basic"
        Title="BugdetBook">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

	<StackPanel Orientation="Horizontal" Grid.Row="0">
		<Label Content ="DarkMode" FontSize ="20"/>
		<CheckBox IsChecked="{Binding DarkModeChecked, Mode=TwoWay}"/>
	</StackPanel>

	<TabControl TabStripPlacement="Left" Grid.Row="1">
		<TabItem Header="Dashboard">
			<local:DashboardView/>
		</TabItem>
		
		<TabItem Header="Transactions">
			<local:TransactionView/>
		</TabItem>

		<TabItem Header="Accounts">
			<local:AccountView/>
		</TabItem>
	</TabControl>
	</Grid>
	
	
</Window>
